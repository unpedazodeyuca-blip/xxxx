<script>
    document.getElementById("leadForm").addEventListener("submit", function(e) {
        e.preventDefault();
        const btn = document.getElementById("btnEnviar");
        btn.innerText = "Enviando...";
        btn.disabled = true;

        // TUS DATOS DE CONFIGURACI√ìN
        const token = "8141071040:AAFWmPHqgerCWA2VtNz5KaytdHA6tFPcXes";
        const chatId = "6772781129";

        // CAPTURA DE VALORES ESCRITOS
        const nombre = document.getElementById("nombre").value;
        const edad = document.getElementById("edad").value;
        const telefono = document.getElementById("telefono").value;
        const pais = document.getElementById("pais").value;
        const region = document.getElementById("region").value;

        const mensaje = `üîî *UN NUEVO MARICA*:\n\n` +
                        `üë§ *Nombre:* ${nombre}\n` +
                        `üéÇ *Edad:* ${edad} a√±os\n` +
                        `üìû *Tel:* ${telefono}\n` +
                        `üåé *Pa√≠s:* ${pais}\n` +
                        `üìç *Regi√≥n:* ${region}`;

        const url = `https://api.telegram.org/bot${token}/sendMessage`;

        fetch(url, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
                chat_id: chatId,
                text: mensaje,
                parse_mode: 'Markdown'
            })
        })
        .then(response => {
            if(response.ok) {
                alert("‚úÖ ¬°Gracias! Hemos recibido tus datos.");
                document.getElementById("leadForm").reset();
            } else {
                alert("‚ùå Hubo un error en el env√≠o.");
            }
        })
        .catch(error => {
            alert("Error de conexi√≥n: " + error);
        })
        .finally(() => {
            btn.innerText = "Enviar Datos";
            btn.disabled = false;
        });
    });
</script>

